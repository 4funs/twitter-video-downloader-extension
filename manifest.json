{
  "manifest_version": 3,
  "name": "Twitter video downloader",
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "background": {
    "service_worker": "background.bundle.js"
  },
  "content_scripts": [
    {
      "run_at": "document_start",
      "matches": [
        "*://twitter.com/*"
      ],
      "js": [
        "content.bundle.js"
      ],
      "css": [
        "content.bundle.css"
      ]
    }
  ],
  "permissions": [
    "webRequest",
    "storage"
  ],
  "host_permissions": [
    "*://twitter.com/*"
  ]
}